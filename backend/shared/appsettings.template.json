{
  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_CONNECTION_STRING}",
    "AzureStorage": "${AZURE_STORAGE_CONNECTION_STRING}",
    "ServiceBus": "${AZURE_SERVICEBUS_CONNECTION_STRING}"
  },
  "JWT": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "ExpireMinutes": 60
  },
  "AzureFormRecognizer": {
    "Endpoint": "${AZURE_FORM_RECOGNIZER_ENDPOINT}",
    "ApiKey": "${AZURE_FORM_RECOGNIZER_API_KEY}"
  },
  "ServiceBus": {
    "DocumentTopicName": "${SERVICEBUS_DOCUMENT_TOPIC}",
    "InvoiceTopicName": "${SERVICEBUS_INVOICE_TOPIC}",
    "PaymentTopicName": "${SERVICEBUS_PAYMENT_TOPIC}",
    "WorkflowTopicName": "${SERVICEBUS_WORKFLOW_TOPIC}",
    "NotificationTopicName": "${SERVICEBUS_NOTIFICATION_TOPIC}"
  },
  "AzureStorage": {
    "ContainerName": "${AZURE_STORAGE_CONTAINER_NAME}"
  },
  "Stripe": {
    "SecretKey": "${STRIPE_SECRET_KEY}",
    "WebhookSecret": "${STRIPE_WEBHOOK_SECRET}"
  },
  "SendGrid": {
    "ApiKey": "${SENDGRID_API_KEY}",
    "FromEmail": "${SENDGRID_FROM_EMAIL}",
    "FromName": "${SENDGRID_FROM_NAME}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CORS": {
    "AllowedOrigins": ["${FRONTEND_URL}", "http://localhost:4200", "https://localhost:4200"]
  }
}
